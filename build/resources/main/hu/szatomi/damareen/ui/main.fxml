<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.szatomi.damareen.controller.MainController">
   <children>
      <HBox fx:id="rootHBox" style="-fx-background-color: #222;">
         <children>
            <VBox fx:id="leftPane" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" spacing="20.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-alignment: center;" text="Gyűjteményed" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <TilePane fx:id="collectionContainer" alignment="TOP_CENTER" hgap="5.0" prefRows="2" vgap="5.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TilePane>
                  <Label contentDisplay="CENTER" style="-fx-alignment: center;" text="Paklid" textFill="WHITE">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <TilePane fx:id="deckContainer" alignment="TOP_CENTER" hgap="5.0" minHeight="150.0" prefRows="1" vgap="5.0" />
                  <FlowPane fx:id="fightButton" alignment="CENTER" disable="true" onMouseClicked="#openCombat" opacity="0.5" prefHeight="100.0" prefWidth="300.0" styleClass="fight-button">
                     <children>
                        <Label text="HARC!" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                     </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </FlowPane>
               </children>
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
            </VBox>
            <VBox fx:id="rightPane" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" spacing="20.0">
               <children>
                  <Label text="Kazamaták" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="dungeonsContainer" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" spacing="10.0" />
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox fx:id="pauseMenu" alignment="CENTER" fillWidth="false" prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #00000088;" visible="false" StackPane.alignment="CENTER">
         <children>
            <Pane onMouseClicked="#mainMenu" styleClass="menu-button">
               <children>
                  <Label text="MENÜ" textFill="WHITE">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </Pane>
            <Pane layoutX="791.0" layoutY="458.0" onMouseClicked="#closeMenu" styleClass="menu-button">
               <children>
                  <Label text="FOLYTATÁS" textFill="WHITE">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </Pane>
            <Pane layoutX="766.0" layoutY="550.0" onMouseClicked="#saveExit" styleClass="menu-button">
               <children>
                  <Label text="MENTÉS &amp; KILÉPÉS" textFill="WHITE">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</StackPane>
