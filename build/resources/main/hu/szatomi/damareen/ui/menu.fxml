<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.szatomi.damareen.controller.MenuController">
   <children>
      <AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #232233;" stylesheets="@style.css" StackPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="480.0" AnchorPane.rightAnchor="480.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                     <image>
                        <Image url="@img/damareen_logo.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Pane onMouseClicked="#newGame" styleClass="menu-button">
                           <Label text="ÚJ JÁTÉK" textFill="WHITE">
                              <font>
                                 <Font name="Jersey 10 Regular" size="96.0" />
                              </font>
                              <padding>
                                 <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                              </padding></Label>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <rotationAxis>
                              <Point3D />
                           </rotationAxis>
                        </Pane>
                        <Pane fx:id="continueButton" disable="true" layoutX="10.0" layoutY="677.0" onMouseClicked="#loadGame" styleClass="menu-button">
                           <children>
                              <Label text="FOLYTATÁS" textFill="WHITE">
                                 <font>
                                    <Font name="Jersey 10 Regular" size="96.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                                 </padding>
                              </Label>
                           </children>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="677.0" onMouseClicked="#exit" styleClass="menu-button">
                           <children>
                              <Label text="KILÉPÉS" textFill="WHITE">
                                 <font>
                                    <Font name="Jersey 10 Regular" size="96.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </Label>
                           </children>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="100.0" left="40.0" right="40.0" top="100.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
      <VBox fx:id="newGamePopup" alignment="CENTER" fillWidth="false" prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #00000088;" visible="false" StackPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="400.0" styleClass="dark-pane">
               <children>
                  <Label alignment="CENTER" text="MÁR VAN MENTÉSED" textAlignment="CENTER" textFill="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" onMouseClicked="#closeGamePopup" style="-fx-background-color: #777; -fx-background-radius: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label alignment="CENTER" text="MÉGSE" textAlignment="CENTER">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>
                     </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="30.0" layoutY="130.0" onMouseClicked="#ignorePopup" style="-fx-background-color: #dd0022; -fx-background-radius: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label alignment="CENTER" text="ÚJ JÁTÉK" textAlignment="CENTER">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>
                     </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</StackPane>
