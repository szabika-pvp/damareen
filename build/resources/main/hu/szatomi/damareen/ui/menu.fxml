<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.szatomi.damareen.controller.MenuController">
   <children>
      <AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #232233;" stylesheets="@style.css" StackPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="480.0" AnchorPane.rightAnchor="480.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                     <image>
                        <Image url="@img/damareen_logo.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Pane onMouseClicked="#newGame" styleClass="menu-button">
                           <Label text="ÚJ JÁTÉK" textFill="WHITE">
                              <font>
                                 <Font name="Jersey 10 Regular" size="96.0" />
                              </font>
                              <padding>
                                 <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                              </padding></Label>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <rotationAxis>
                              <Point3D />
                           </rotationAxis>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="677.0" onMouseClicked="#loadGame" styleClass="menu-button">
                           <children>
                              <Label text="FOLYTATÁS" textFill="WHITE">
                                 <font>
                                    <Font name="Jersey 10 Regular" size="96.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                                 </padding>
                              </Label>
                           </children>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="677.0" onMouseClicked="#gameMaster" styleClass="menu-button">
                           <children>
                              <Label text="JÁTÉKMESTER" textFill="WHITE">
                                 <font>
                                    <Font name="Jersey 10 Regular" size="96.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                                 </padding>
                              </Label>
                           </children>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="677.0" onMouseClicked="#exit" styleClass="menu-button">
                           <children>
                              <Label text="KILÉPÉS" textFill="WHITE">
                                 <font>
                                    <Font name="Jersey 10 Regular" size="96.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </Label>
                           </children>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="100.0" left="40.0" right="40.0" top="100.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
